
local tArgs = { ... }
if #tArgs < 1 then
	print( "Usage: rm <path>" )
	return
end

local sPath = shell.resolve( tArgs[1] )
if sPath=="secacct/"..os.user.."/.password" then return end
if fs.getDir(sPath) == "" or fs.getDir(sPath) == "secacct" then
print("Not allowed")
return end
local tFiles = fs.find( sPath )
if #tFiles > 0 then
    for n,sFile in ipairs( tFiles ) do
        fs.delete( sFile )
    end
else
    printError( "No matching files" )
end
