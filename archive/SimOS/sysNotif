while true do
local notifs = system.getNotifications()
local active = {}
for i=1,#notifs do
table.insert(active, notifs[i][1])
end
table.insert(active, "Exit")
local n = system.drawMenu(active, {#notifs.." notifications"})
if n==#active then return end
local act = system.drawMenu({"View", "Remove"})
if act==1 then
shell.run(notifs[n][2])
else 
system.delNotification(n)
end end
