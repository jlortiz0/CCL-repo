table.indexOf = function(tab, key)
  for k, v in pairs(tab) do
    if v==key then return k end
  end
end
function bit.tobits(num)
  local tab, new = {}
  for i=0, 31 do
    new = bit.blshift(num, i)
    table.insert(tab, bit.blogic_rshift(new, 31))
  end
  while tab[1]==0 do
    table.remove(tab,1)
  end
  return tab
end
function bit.tonum(bits)
  local num = 0
  for i=1, #bits do
    if bits[i]==1 then
      num = num + 2^(#bits-i)
    end
  end
  return num
end
